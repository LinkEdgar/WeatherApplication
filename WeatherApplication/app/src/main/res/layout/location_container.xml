<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Template for the list of locations added via the weather API-->

    <TextView
        tools:text="title"
        android:id="@+id/location_container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/location_container_title"
        tools:text="location id"
        android:id="@+id/location_container_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        tools:text="type"
        android:layout_below="@id/location_container_location"
        android:id="@+id/location_container_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>